<!-- Product -->
<div id="product" class="block-quickview">
    <div class="primary-box row">
        <div class="pb-left-column col-xs-12 col-sm-5">
            <!-- product-imge-->
            <div class="product-image">
                <div class="product-full">
                    <img id="product-zoom" src='<%= image_src(@product.main_image.image_url.medium) %>' data-zoom-image="<%= image_src(@product.main_image.image_url.big) %>"/>
                </div>
                <div class="product-img-thumb" id="gallery_01">
                    <ul class="owl-carousel" data-items="3" data-nav="true" data-dots="false" data-margin="20" data-loop="false">
                        <% @product.images.each do |item| %>
                        <li>
                            <a href="#" data-image="<%= image_src(item.image_url.medium) %>" data-zoom-image="<%= image_src(item.image_url.big) %>">
                                <img id="product-zoom"  src="<%= image_src(item.image_url.small) %>" /> 
                            </a>
                        </li>
                        <% end %>
                    </ul>
                </div>
            </div>
            <!-- product-imge-->
        </div>
        <div class="pb-right-column col-xs-12 col-sm-6">
            <h1 class="product-name"><%= @product.name %></h1>
            <div class="product-comments">
                <div class="product-star">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-half-o"></i>
                </div>
                <div class="comments-advices">
                    <a href="">Có 3 đánh giá cho sản phẩm</a>
                    <a href=""><i class="fa fa-pencil"></i> Viết đánh giá</a>
                </div>
            </div>
            <div class="product-price-group">
                <span class="price"><%= format_number(@product.new_price) %> VNĐ</span>
                <% if !@product.discount.nil? && !@product.old_price.nil? %>
                <span class="old-price"><%= format_number(@product.old_price) %> VNĐ</span>
                <span class="discount"><%= @product.discount %></span>
                <% end %>
            </div>
            <div class="info-orther">
                <p>Mã sản phẩm: <%= @product.code %></p>
                <p>Trạng thái: <span class="in-stock">Còn trong kho</span></p>
                <p>Tình trạng: Sản phẩm mới</p>
            </div>
            <div class="product-desc"><%= @product.short_description %></div>
            <div class="form-option">
                <p class="form-option-title">Lựa chọn thuộc tính:</p>
                <div class="attributes">
                    <div class="attribute-label">Màu sắc:</div>
                    <div class="attribute-list">
                        <ul class="list-color">
                            <li style="background:#0c3b90;"><a href="#">red</a></li>
                            <li style="background:#036c5d;" class="active"><a href="#">red</a></li>
                            <li style="background:#5f2363;"><a href="#">red</a></li>
                            <li style="background:#ffc000;"><a href="#">red</a></li>
                            <li style="background:#36a93c;"><a href="#">red</a></li>
                            <li style="background:#ff0000;"><a href="#">red</a></li>
                        </ul>
                    </div>
                </div>
                <div class="attributes">
                    <div class="attribute-label">Số lượng:</div>
                    <div class="attribute-list product-qty">
                        <div class="qty">
                            <input id="option-product-qty" type="text" value="1">
                        </div>
                        <div class="btn-plus">
                            <a href="#" class="btn-plus-up">
                                <i class="fa fa-caret-up"></i>
                            </a>
                            <a href="#" class="btn-plus-down">
                                <i class="fa fa-caret-down"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="attributes">
                    <div class="attribute-label">Kích cở:</div>
                    <div class="attribute-list">
                        <select>
                            <option value="1">X</option>
                            <option value="2">XL</option>
                            <option value="3">XXL</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-share">
                <div class="sendtofriend-print">
                    <a href="javascript:print();"><i class="fa fa-print"></i> In sản phẩm</a>
                    <a href="#"><i class="fa fa-envelope-o fa-fw"></i>Gửi tới bạn bè</a>
                </div>
                <div class="network-share">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product -->