<% title @page_title %>

<div class="columns-container">
    <div class="container" id="columns">
        
        <!-- breadcrumb -->
        <div class="breadcrumb clearfix">
            <%= link_to "Trang Chủ", naturesoft_hoangkhangstore_com.root_path, class: "home", title: "Trở về trang chủ" %>
            <span class="navigation-pipe">&nbsp;</span>
            <span class="navigation_page"><%= @page_title %></span>
        </div>
        <!-- ./breadcrumb -->
        
        <!-- row -->
        <div class="row">
            
            <!-- Left column -->
            <%= render "/modules/category_left_column" %>
            <!-- ./left column -->
            
            <!-- Center column-->
            <div class="center_column col-xs-12 col-sm-9" id="center_column">
                <!-- category-slider -->
                <%= position("hoangkhangstore_com::category-slider")%>
                <!-- ./category-slider -->
                <!-- subcategories -->
                <!--<div class="subcategories">
                    <ul>
                        <li class="current-categorie">
                            <%= link_to "Hãng sản xuất", "" %>
                        </li>
                        <li>
                            <%= link_to "Apple", "" %>
                        </li>
                        <li>
                            <%= link_to "Dell", "" %>
                        </li>
                        <li>
                            <%= link_to "HP", "" %>
                        </li>
                        <li>
                            <%= link_to "Asus", "" %>
                        </li>
                        <li>
                            <%= link_to "Acer", "" %>
                        </li>
                    </ul>
                </div>-->
                <!-- ./subcategories -->
                <!-- view-product-list-->
                <div id="view-product-list" class="view-product-list" style="margin-top: 0;">
                    <h2 class="page-heading">
                        <span class="page-heading-title"><%= @page_title %></span>
                    </h2>
                    <ul class="display-product-option">
                        <li class="view-as-grid selected">
                            <span>grid</span>
                        </li>
                        <li class="view-as-list">
                            <span>list</span>
                        </li>
                    </ul>
                    <!-- PRODUCT LIST -->
                    <ul class="row product-list grid">
                        <% @products.each do |item| %>
                        <li class="col-sx-12 col-sm-4">
                            <div class="product-container">
                                <div class="left-block">
                                    <%= link_to image_tag(image_src(item.main_image.image_url.big), alt: item.name, class: "img-responsive"), naturesoft_products.detail_products_path(product_id: item, title: url_friendly(item.name)) %>
                                    <div class="quick-view">
                                            <a title="Add to my wishlist" class="heart" href="#"></a>
                                            <a title="Add to compare" class="compare" href="#"></a>
                                            <a title="Quick view" class="search" href="#"></a>
                                    </div>
                                    <div class="add-to-cart">
                                        <%= link_to "Thêm vào giỏ hàng", naturesoft_products.add_to_cart_cart_items_path(product_id: item.id, title: url_friendly(item.name)), title: "Thêm vào giỏ hàng" %>
                                    </div>
                                </div>
                                <div class="right-block">
                                    <h5 class="product-name"><%= link_to item.name, naturesoft_products.detail_products_path(product_id: item, title: url_friendly(item.name)) %></h5>
                                    <div class="product-star">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-half-o"></i>
                                    </div>
                                    <div class="content_price">
                                        <span class="price product-price"><%= format_number(item.new_price) %> VNĐ</span>
                                        <% if !item.discount.nil? && !item.old_price.nil? %>
                                        <span class="price old-price"><%= format_number(item.old_price) %> VNĐ</span>
                                        <% end %>
                                    </div>
                                    <div class="info-orther">
                                        <p>Mã sản phẩm: <%= item.code %></p>
                                        <p class="availability">Trạng thái: <span>Còn trong kho</span></p>
                                        <div class="product-desc">
                                            <%= item.short_description.html_safe %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <script>
                            var QUICK_VIEW_URL = "<%= quick_view_path(product_id: item.id) %>"
                        </script>
                        <% end %>
                    </ul>
                    <!-- ./PRODUCT LIST -->
                </div>
                <!-- ./view-product-list-->
                <div class="sortPagiBar">
                    <div class="bottom-pagination">
                        <nav>
                          <ul class="pagination">
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                              <a href="#" aria-label="Next">
                                <span aria-hidden="true">Trang sau &raquo;</span>
                              </a>
                            </li>
                          </ul>
                        </nav>
                    </div>
                    <div class="show-product-item">
                        <select name="">
                            <option value="">Hiển thị 18 sản phẩm.</option>
                            <option value="">Hiển thị 20 sản phẩm.</option>
                            <option value="">Hiển thị 50 sản phẩm.</option>
                            <option value="">Hiển thị 100 sản phẩm.</option>
                        </select>
                    </div>
                    <div class="sort-product">
                        <select>
                            <option value="">Tên sản phẩm</option>
                            <option value="">Giá</option>
                        </select>
                        <div class="sort-product-icon">
                            <i class="fa fa-sort-alpha-asc"></i>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ./ Center column -->
        </div>
        <!-- ./row-->
    </div>
</div>