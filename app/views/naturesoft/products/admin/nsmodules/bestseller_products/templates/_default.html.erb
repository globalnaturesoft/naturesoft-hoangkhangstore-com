<ul class="product-list owl-carousel" data-dots="false" data-loop="true" data-nav = "true" data-margin = "30" data-autoplayTimeout="1000" data-autoplayHoverPause = "true" data-responsive='{"0":{"items":1},"600":{"items":3},"1000":{"items":3}}'>
    
    <% products.each do |item| %>
        <li>
            <div class="left-block">
                <%= link_to image_tag(image_src(item.main_image.image_url.big), alt: item.name, class: "img-responsive"), naturesoft_products.detail_products_path(product_id: item) %>
                <div class="quick-view">
                        <a title="Add to my wishlist" class="heart" href="#"></a>
                        <a title="Add to compare" class="compare" href="#"></a>
                        <a title="Quick view" class="search" href="#"></a>
                </div>
                <div class="add-to-cart">
                    <%= link_to "Thêm vào giỏ hàng", naturesoft_products.add_to_cart_cart_items_path(product_id: item.id), title: "Thêm vào giỏ hàng" %>
                </div>
                <div class="group-price">
                    <span class="product-new">NEW</span>
                    <span class="product-sale">Sale</span>
                </div>
            </div>
            <div class="right-block">
                <h5 class="product-name"><%= link_to item.name, naturesoft_products.detail_products_path(product_id: item) %></h5>
                <div class="content_price">
                    <span class="price product-price"><%= format_number(item.new_price) %> VNĐ</span>
                    <% if !item.discount.nil? && !item.old_price.nil? %>
                        <span class="price old-price"><%= format_number(item.old_price) %> VNĐ</span>
                    <% end %>
                </div>
                <div class="product-star">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-half-o"></i>
                </div>
            </div>
        </li>
    <% end %>
</ul>